"JSX"

// App.js
import React from 'react';
import Header from './components/Header';
import Features from './components/Features';
import CallToAction from './components/CallToAction';
import './App.css';

function App() {
  return (
    <div>
      <Header />
      <Features />
      <CallToAction />
    </div>
  );
}

export default App;


